// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model InventoryItem {
  id          String   @id @default(cuid())
  name        String   @unique
  category    String
  qty         Int
  status      String
  location    String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // If this item is a "Set Komputer", this lists its parts.
  specsAsSet  Component[] @relation("ComputerSet")

  // Lists where this item is used AS a component.
  usedInSets  Component[] @relation("ComponentItem")
}

// This is the join table linking a "Set" to its "Components"
model Component {
  id    String @id @default(cuid())
  qty   Int

  // Link to the "Set Komputer" (the parent item)
  setId String
  set   InventoryItem @relation("ComputerSet", fields: [setId], references: [id], onDelete: Cascade)

  // Link to the component item itself
  componentId String
  component   InventoryItem @relation("ComponentItem", fields: [componentId], references: [id], onDelete: Cascade)

  // Ensure a component is only listed once per set.
  @@unique([setId, componentId])
}

model Category {
  id   String @id @default(cuid())
  name String @unique
}

model Status {
  id   String @id @default(cuid())
  name String @unique
}

model Location {
  id   String @id @default(cuid())
  name String @unique
}