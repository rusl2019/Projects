// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model InventoryItem {
  id           String   @id @default(cuid())
  name         String   @unique
  description  String?
  qty          Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations to master data
  category     Category @relation(fields: [categoryId], references: [id])
  categoryId   String
  status       Status   @relation(fields: [statusId], references: [id])
  statusId     String
  location     Location @relation(fields: [locationId], references: [id])
  locationId   String

  // If this item is a "Set Komputer", this lists its parts.
  specsAsSet   Component[] @relation("ComputerSet")

  // Lists where this item is used AS a component.
  usedInSets   Component[] @relation("ComponentItem")
}

// This is the join table linking a "Set" to its "Components"
model Component {
  id    String @id @default(cuid())
  qty   Int

  // Link to the "Set Komputer" (the parent item)
  setId String
  set   InventoryItem @relation("ComputerSet", fields: [setId], references: [id], onDelete: Cascade)

  // Link to the component item itself
  componentId String
  component   InventoryItem @relation("ComponentItem", fields: [componentId], references: [id], onDelete: Cascade)

  // Ensure a component is only listed once per set.
  @@unique([setId, componentId])
}

model Category {
  id            String          @id @default(cuid())
  name          String          @unique
  inventoryItems InventoryItem[]
}

model Status {
  id            String          @id @default(cuid())
  name          String          @unique
  inventoryItems InventoryItem[]
}

model Location {
  id            String          @id @default(cuid())
  name          String          @unique
  inventoryItems InventoryItem[]
}